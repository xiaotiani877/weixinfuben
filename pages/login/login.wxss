.container {
  padding: 0;
}

.up {
  width: 90%;
}

.icon-box {
  display: flex;
  height: 82.03125rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  border-bottom: 4.6875rpx solid #f6f6f6;
}

.icon-box-ctn input {
  height: 80rpx;
  margin-left: 46.875rpx;
}

.icon-box-ctn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon-box-ctn-icon {
  padding-top: 7.03125rpx;
}

.mp-icon {
  margin-right: 40rpx;
}

.button-box {
  display: flex;
  align-items: center;
  width: 40%;
}

.button-box-ver {
  height: 65%;
  display: flex;
  align-items: center;
  border-left: 2.34375rpx solid #f5f5f5;
}

.button-box-ver button {
  height: 100%;
  border-radius: 35.15625px;
  font-size: 30rpx !important;
  color: #a3a3a3;
  margin-left: 46.875rpx;
}

.down {
  width: 90%;
  /* height: 902.34375rpx; */
  background-color: #f5f7f9;
}

.down button {
  margin-top: 25px;
  width: 90% !important;
  font-size: 30rpx;
  color: #e8f2fe;
  background-color: #6db4fb;
  border-radius: 4px;
}

.privacy {
  text-align: center;
  font-size: 25rpx;
  color: #7e7e7f;
  margin-top: 105%;
  padding-bottom: 10px;
}
